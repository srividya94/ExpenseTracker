<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.squareandcube.expensetracker">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".RegistrationActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ForgetPasswordActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".SignIn"
            android:label="@string/title_activity_sign_in"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".AudioRecorderActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RecordingListActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".QRCodeScanner" />
        <activity android:name=".DisplayIncomeDetailsActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".IncomeActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ExpenseActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".DisplayExpenseDetailsActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".SavingsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".SlideShowActivity" />
        <activity android:name=".InvestmentNewsActivity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>